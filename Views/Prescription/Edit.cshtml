@model Prescription
@{
    string title = ViewBag.Action + " Prescription";
    ViewData["Title"] = title;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">
                        @ViewBag.Action
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="PrescriptionId" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MedicationName" class="form-label required-field">Medication Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"></span>
                                    <input asp-for="MedicationName" class="form-control" placeholder="Enter medication name">
                                </div>
                                <span asp-validation-for="MedicationName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Cost" class="form-label required-field">Cost ($)</label>
                                <div class="input-group">
                                    <span class="input-group-text"></span>
                                    <input asp-for="Cost" type="number" step="0.01" class="form-control" placeholder="0.00">
                                </div>
                                <span asp-validation-for="Cost" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FillStatus" class="form-label required-field">Fill Status</label>
                                <div class="input-group">
                                    <span class="input-group-text"></span>
                                    <select asp-for="FillStatus" class="form-select">
                                        <option value="New">New</option>
                                        <option value="Filled">Filled</option>
                                        <option value="Pending">Pending</option>
                                    </select>
                                </div>
                                <span asp-validation-for="FillStatus" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RequestTime" class="form-label required-field">Request Date</label>
                                <div class="input-group">
                                    <span class="input-group-text"></span>
                                    <input asp-for="RequestTime" type="date" class="form-control">
                                </div>
                                <span asp-validation-for="RequestTime" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                                Cancel
                            </a>

                            <div>
                                <button type="submit" class="btn btn-success">
                                    Save Prescription
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 p-3 bg-light rounded small">
                <h6>Prescription Guidelines</h6>
                <ul class="mb-0">
                    <li>Mark required fields with an asterisk (*)</li>
                    <li>Ensure medication names are entered exactly as prescribed</li>
                    <li>Select the appropriate fill status for accurate tracking</li>
                </ul>
            </div>
        </div>
    </div>
</div>